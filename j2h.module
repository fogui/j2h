function find_block_var($key, $block_vars) {

    foreach (explode("\r\n", $block_vars) as $var) {
        if (strpos($var, $key) !== false && strpos($var,':') !== false) {
            $t = explode(':', $var);
            
            return $t[1];
        }
    }

    return false;
}

